<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#4A90E2"
            android:padding="16dp">

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="← Quay lại"
                android:textColor="#FFFFFF"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/chartTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Biểu đồ thời tiết"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

        </RelativeLayout>

        <!-- Tab buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnTempChart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nhiệt độ"
                android:textSize="14sp"
                android:padding="12dp"
                android:background="#4A90E2"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnRainChart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mưa"
                android:textSize="14sp"
                android:padding="12dp"
                android:background="#E0E0E0"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Chart Container -->
        <LinearLayout
            android:id="@+id/chartContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="16dp">

            <!-- Temperature Data -->
            <TextView
                android:id="@+id/tvTempData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đang tải dữ liệu nhiệt độ..."
                android:textSize="13sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp"
                android:padding="4dp" />

            <!-- Rain Data -->
            <TextView
                android:id="@+id/tvRainData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đang tải dữ liệu mưa..."
                android:textSize="13sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp"
                android:padding="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dữ liệu được cập nhật mỗi 3 giờ từ OpenWeatherMap"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:padding="8dp" />

    </LinearLayout>

</ScrollView>